@using MVC_Seyahat_Proje.Models.Siniflar
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Yorumlar>
@{
    ViewBag.Title = "YorumListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Yorum Listesi</h2>
<br />

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıcı Adı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.KullaniciAdi</td>
            <td>@x.Mail</td>
            <td>@x.Yorum</td>
            <td>@x.Blog.Baslik</td>
            <td><a href="/Admin/YorumSil/@x.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/YorumGetir/@x.ID" class="btn btn-primary">Güncelle</a></td>
        </tr>
    }
</table>
@Html.PagedListPager(
    Model,
    page => Url.Action("YorumListesi", new { sayfa = page }),
    new PagedListRenderOptions
    {
        UlElementClasses = new[] { "my-pagination" },
        LiElementClasses = new[] { "my-page-item" }
    }
)


